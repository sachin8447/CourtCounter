<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="500dp"
    android:weightSum="1"
    android:background="#8389fa"
    android:fillViewport="false">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|bottom"
        android:layout_marginTop="120sp"
        android:id="@+id/linearLayout"
        android:showDividers="beginning"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:layout_marginLeft="0dp"
            android:orientation="vertical"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textSize="32dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="00"
                android:textSize="60dp"
                android:id="@+id/Atext"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="137dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="+3 points"
                android:shadowColor="#b8acac"
                android:background="#fa0f6d"
                android:onClick="AaddT"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="137dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="+2 Points"
                android:shadowColor="#c9b6b6"
                android:background="#fa0f6d"
                android:layout_marginTop="10dp"
                android:onClick="Aaddt"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="137dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Free Throw"
                android:shadowColor="#c3a2a2"
                android:background="#fa0f6d"
                android:layout_marginTop="10dp"
                android:onClick="Afree"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="3dp"
            android:layout_height="300dp"
            android:background="#0d0c0c"
            android:layout_marginBottom="0dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.84"
            android:layout_marginLeft="0dp"
            android:orientation="vertical"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="left|center_horizontal"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textSize="32dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="00"
                android:textSize="60dp"
                android:id="@+id/Btext"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="137dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="+3 points"
                android:id="@+id/button1"
                android:shadowColor="#b8acac"
                android:background="#fa0f6d"
                android:onClick="BaddT"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="137dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="+2 Points"
                android:id="@+id/button21"
                android:shadowColor="#c9b6b6"
                android:background="#fa0f6d"
                android:layout_marginTop="10dp"
                android:onClick="Baddt"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="137dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Free Throw"
                android:id="@+id/button31"
                android:shadowColor="#c3a2a2"
                android:background="#fa0f6d"
                android:layout_marginTop="10dp"
                android:onClick="Bfree"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>


    </LinearLayout>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/button4"
        android:background="#fa0f6d"
        android:onClick="Reset"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</LinearLayout>
</ScrollView>